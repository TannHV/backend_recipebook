NODE_ENV=development
PORT=8080

# MongoDB settings
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.lkqkked.mongodb.net/RecipeFoodDB?retryWrites=true&w=majority
DB_NAME=RecipeFoodDB

# JWT settings
JWT_SECRET=super_secret_key_123456

# Cloudinary settings
CLOUDINARY_CLOUD_NAME=your_cloud
CLOUDINARY_API_KEY=your_key
CLOUDINARY_API_SECRET=your_secret

# Email settings
EMAIL_SERVICE=smtp or gmail
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=<MAILTRAP_USER>
SMTP_PASS=<MAILTRAP_PASS>
SMTP_SECURE=false
EMAIL_FROM="FoodBook Recipes <no-reply@foodbook.com>"

APP_BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:8080

# Token expiration times
EMAIL_VERIFY_TOKEN_EXPIRES_MIN=60
PASSWORD_RESET_TOKEN_EXPIRES_MIN=30

# ===== Email OTP (verify + reset) =====
EMAIL_VERIFY_CODE_LENGTH=6
EMAIL_VERIFY_CODE_EXPIRES_MIN=15
EMAIL_VERIFY_CODE_MAX_ATTEMPTS=5
EMAIL_VERIFY_RESEND_COOLDOWN_SEC=60

RESET_CODE_LENGTH=6
RESET_CODE_EXPIRES_MIN=10
RESET_CODE_MAX_ATTEMPTS=5
RESET_RESEND_COOLDOWN_SEC=60

# ===== CORS =====
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:5173

# Default URLs
DEFAULT_AVATAR_URL=https://res.cloudinary.com/.../default_avatar.png
